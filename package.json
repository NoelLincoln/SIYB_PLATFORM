{
  "name": "siyb-platform",
  "version": "1.0.0",
  "description": "Start and Improve Your Business Platform - Django + React",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && ../.venv/bin/python manage.py runserver",
    "frontend": "cd frontend && npm run dev",
    "install:backend": "cd backend && ../.venv/bin/pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "build": "cd frontend && npm run build",
    "test": "concurrently \"cd backend && ../.venv/bin/python manage.py test\" \"cd frontend && npm test\"",
    "migrate": "cd backend && ../.venv/bin/python manage.py migrate",
    "makemigrations": "cd backend && ../.venv/bin/python manage.py makemigrations",
    "superuser": "cd backend && ../.venv/bin/python manage.py createsuperuser",
    "backend:test": "cd backend && ../.venv/bin/python manage.py runserver",
    "setup": "npm install && npm run install:all"
  },
  "keywords": ["django", "react", "siyb", "business", "training"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}